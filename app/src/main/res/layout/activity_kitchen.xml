<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kitchen"
    android:background="@drawable/background2">

    <TextView
        android:id="@+id/smartText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="smart"
        android:textSize="30dp"
        android:textAllCaps="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/black"/>
    <TextView
        android:id="@+id/kitchenText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kitchen"
        android:textSize="30dp"
        android:textAllCaps="true"
        android:layout_centerInParent="true"
        android:layout_below="@+id/smartText"
        android:layout_marginTop="2dp"
        android:textColor="@android:color/black"/>

    <ImageView
        android:id="@+id/topView"
        android:layout_width="300dp"
        android:layout_height="15dp"
        android:layout_below="@+id/kitchenText"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:src="@drawable/top"

        >

    </ImageView>
    <LinearLayout
        android:id="@+id/roof"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topView"
        android:layout_centerInParent="true">


    <Button
        android:id="@+id/leftLed"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:background="@drawable/lampoff"
        android:layout_below="@+id/topView"
        android:layout_centerInParent="true"
        android:layout_marginRight="20dp"
        android:onClick="lampone"

        />
    <Button
        android:id="@+id/RightLed"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:background="@drawable/lampoff"
        android:layout_below="@+id/topView"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:onClick="lamptwo"

        />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/top2raf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/roof"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            >

            <Button
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/black"
                />

            <Button
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:background="@drawable/black"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            >
            <Button
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:background="@drawable/black"
                />

            <Button
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:background="@drawable/black"
                android:layout_marginLeft="5dp"
                />

        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/topraf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/roof"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            >

            <Button
                android:id="@+id/four"
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/onelclosed"
                android:onClick="four"
                />

            <Button
                android:id="@+id/three"
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:background="@drawable/onelclosed"
                android:onClick="three"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            >
            <Button
                android:id="@+id/two"
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:background="@drawable/onerclosed"
                android:onClick="two"
                />

            <Button
                android:id="@+id/one"
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:background="@drawable/onerclosed"
                android:layout_marginLeft="5dp"
                android:onClick="one"
                />

        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/bottomView"
        android:layout_width="350dp"
        android:layout_height="15dp"
        android:layout_below="@+id/topraf"
        android:layout_centerInParent="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/bottom">
    </ImageView>
    <RelativeLayout
        android:id="@+id/b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bottomView"
        android:layout_centerInParent="true"
        android:layout_marginTop="2dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        
        >
        <Button
            android:id="@+id/leftdorg"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/rollerclosed"
            android:layout_alignParentLeft="true"
            android:onClick="twelve"
           />
        <ImageView
            android:layout_width="150dp"
            android:layout_height="135dp"
            android:src="@drawable/cooker"
            android:layout_centerInParent="true"/>

        <Button
            android:id="@+id/rightdorg"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/rollerclosed"
            android:layout_alignParentRight="true"
            android:onClick="ten"
           />
    </RelativeLayout>
    <Button
        android:id="@+id/mic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/mic"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:onClick="mic"
        />
</RelativeLayout>